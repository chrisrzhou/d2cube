{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2020"
    ],
    "moduleResolution": "node",
    "module": "es2020",
    "skipLibCheck": true,
    "strict": false,
    "target": "es2020"
  },
  "include": ["src/", "module.d.ts"],
}
